<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/player_money_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/exit"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/tv_level_question_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15000000"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:background="@drawable/answer"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/settings"
            app:tint="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_countdown_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_purple_corner_10"/>

        <FrameLayout
            android:id="@+id/fr_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_content_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content Question 1"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:background="@drawable/bg_purple_corner_10"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_level_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@drawable/bg_orange_corner_30"
                android:layout_gravity="center|top"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_fifty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/atp__activity_player_button_image_help_5050"/>
            <ImageView
                android:id="@+id/img_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/atp__activity_player_button_image_help_audience"/>
            <ImageView
                android:id="@+id/img_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/atp__activity_player_button_image_help_call"/>
            <ImageView

                android:id="@+id/img_percent"
                android:layout_width="40dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/bar_chart"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/player_answer_background_normal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/tv_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 2"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/player_answer_background_normal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/tv_answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 3"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/player_answer_background_normal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/tv_answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 4"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/player_answer_background_normal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

</RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/console"
                android:drawableTint="@color/white"
                android:text="@string/btn_play"
                android:background="@drawable/bg_purple_corner_30"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/bag"
                android:drawableTint="@color/white"
                android:text="@string/btn_shopping"
                android:background="@drawable/bg_purple_corner_30"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ranking"
                android:drawableTint="@color/white"
                android:text="@string/btn_rank"
                android:background="@drawable/bg_purple_corner_30"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/settings"
                android:text="@string/btn_setting"
                android:drawableTint="@color/white"
                android:background="@drawable/bg_purple_corner_30"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/exit"
                android:drawableTint="@color/white"
                android:text="@string/btn_exit"
                android:background="@drawable/bg_purple_corner_30"/>
        </LinearLayout>

